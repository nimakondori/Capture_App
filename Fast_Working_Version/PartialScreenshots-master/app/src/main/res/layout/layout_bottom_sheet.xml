<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
        <variable
            name="handler"
            type="murmur.partialscreenshots.BottomSheetHandler" />
        <variable
            name="results"
            type="murmur.partialscreenshots.Results" />
</data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:background="@color/WHITE"
        android:onTouch="@{handler::onTouch}"

        >
        <TextView
            android:id="@+id/Btext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@{results.Res1}"
            android:textColor="@color/BLACK"
            />
        <TextView
            android:id="@+id/Btext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@{results.Res2}"
            android:textColor="@color/BLACK"
            />
        <TextView
            android:id="@+id/Btext3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@{results.Res3}"
            android:textColor="@color/BLACK"
            />
    </LinearLayout>

</layout>